<div class="container">
  <div class="row"><h3>Events And Gathering</h3></div>

  <% locals.gatherings.forEach(gathering => { %>
        <div class="row">
          
            <div class="col s12 ">
              <div class="card blue-grey darken-1">
                <div class="card-content white-text">
                  <span class="card-title">
                    <h3><%= gathering.name %></h3>
                  </span>
                  <h6><%= gathering.description %></h6>
                  <small>Host: <%= gathering.hostedBy %></small>
                  <hr>
                  <div class="waves-effect waves-light btn">
                    Register
                  </div>
                </div>

                
                <div class="card-action">
                  <a class="">
                    <i class="material-icons left">location_on</i> 
                    <span><%= gathering.location%></span>
                  </a>
                    <a class="right">
                      <span><%= gathering.registeredPeoples.length%></span>
                      <i class="material-icons left">groups</i> 
                    </a>
                </div>
          </div>
        </div>
        </div>
    <%})%>
    
      <!-- Floating button to add new Issue -->
    
      <div class="fixed-action-btn">
        <a class="btn-floating btn-large red pulse tooltipped" href="/events/create-events" data-position="left"
          data-tooltip="Create a new Issue">
          <i class="large material-icons">add</i>
        </a>
      </div>
</div>